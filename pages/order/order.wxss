/* pages/order/order.wxss */
.order{
  width: 85%;
  margin: 30rpx auto;
  overflow: hidden;
  padding-bottom: 100rpx;
}
.order>.head{
  width: 100%;
  height: 195rpx;
  overflow: hidden;
  position: relative;
}
.order>.head>image{
  width: 100%;
  height: 100%;
}
.order>.head>.text{
  width: 100%;
  font-size: 32rpx;
  z-index: 10;
  position: absolute;
  top: 0;
  left: 0;
  padding: 30rpx 0 30rpx 50rpx;
}
.order>.body{
  width: 100%;
  background-color: white;
}
.order>.body>.head>.act{
  width: 30rpx;
  height: 6rpx;
  background-color: #D9D9D9;
}
.order>.body>.content{
  width: 85%;
  height: auto;
  border-bottom: 1rpx solid #e9e9e9;
}
.order>.body>.content>.text{
  font-size: 26rpx;
  color:#4D4A4A;
}
.order>.body>.content>.conBox{
  height: auto;
  font-size: 30rpx;
  color:#4D4A4A;
}
.order>.body>.content>image{
  width: 144rpx;
  height: 144rpx;
}
.order>.body>.foot{
  width: 85%;
  color: #4D4A4A;
  font-size: 28rpx;
}

.textContent{
  width: 350rpx;
  min-height: 80rpx;
  background-color: rgb(245, 245, 245);
}

#foot{
  width: 100%;
  height: 88rpx;
  background-color: #000000;
  color: white;
  position: fixed;
  bottom: 0;
}

#foot>.left{
  width: 35%;
  height: 100%;
}

#foot>.right{
  width: 226rpx;
  height: 100%;
  background-color: #FDAE3C;
  color: #000000;
  text-align: center;
  line-height: 85rpx;
}